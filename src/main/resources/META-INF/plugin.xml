<idea-plugin version="2">
    <id>com.github.jeysal.intellij.plugin.livetemplate.scriptenginemacro</id>
    <name>LiveTemplate ScriptEngine Macro</name>

    <vendor url="https://github.com/jeysal" email="seckinger.tim@gmail.com"/>

    <description>
        <![CDATA[
        A plugin for enhanced live template scripting support.
        Check out the <a href="https://github.com/jeysal/livetemplate-scriptengine-macro">GitHub repository</a> and
        <a href="https://github.com/jeysal/livetemplate-scriptengine-macro/wiki">wiki</a>
        for more information and usage instructions.
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        You can find the changelog
        <a href="https://github.com/jeysal/livetemplate-scriptengine-macro/blob/master/CHANGELOG.md">here</a>.
        ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <liveTemplateMacro
                implementation="com.github.jeysal.intellij.plugin.livetemplate.scriptenginemacro.ScriptEngineMacro"/>
    </extensions>
</idea-plugin>
